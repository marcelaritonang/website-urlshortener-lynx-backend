# Application
APP_ENV=production
PORT=8080
HOST=0.0.0.0
BASE_URL=https://api.lynxs.ly

# Database Configuration (PostgreSQL)
POSTGRES_USER=lynx_prod_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=lynx_prod_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_HOST_AUTH_METHOD=scram-sha-256
PGDATA=/var/lib/postgresql/data/pgdata

# Database Connection (Used by API) - Will be injected by Railway/Cloud
DB_HOST=postgres
DB_PORT=5432
DB_USER=lynx_prod_user
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_NAME=lynx_prod_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION
REDIS_MAXMEMORY=512mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# JWT Configuration - GENERATE NEW SECRET FOR PRODUCTION!
JWT_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# URL Shortener Configuration
URL_PREFIX=
MAX_SHORT_URL_LENGTH=10
DEFAULT_URL_EXPIRATION=30d

# CORS Configuration - Specific domains for production
ALLOWED_ORIGINS=https://lynxs.ly,https://www.lynxs.ly

# Docker Configuration
CGO_ENABLED=0
GOOS=linux